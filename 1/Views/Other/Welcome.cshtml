@model InkCanvas.ViewModel.RegisterViewModel

<h2>Welcome to InkCanvas!</h2>

<!-- Registration Form -->
<form id="registrationForm" method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Username"></label><br />
        <input asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Age"></label><br />
        <input asp-for="Age" />
        <span asp-validation-for="Age"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <input type="submit" value="Register" />
    </div>
</form>

<!-- Switch to Login Button -->
<button id="switchToLogin">Already have an account? Login</button>

<script>
    // JavaScript to handle switching between registration and login
    document.getElementById('switchToLogin').addEventListener('click', function () {
        // Redirect to the login page or toggle visibility of login fields
        // Replace 'login' with the appropriate action/controller route for your login page
        window.location.href = '/Account/Login';
    });
</script>
