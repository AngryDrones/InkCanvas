@model IEnumerable<InkCanvas.Models.User>

@{
    ViewData["Title"] = "Followers";
}

<h3>Followers: @Model.Count()</h3>
<hr />
@if (Model.Any())
{
    <ul>
        @foreach (var follower in Model)
        {
            <li>@follower.Login</li>
        }
    </ul>
}
else
{
    <p>No followers :(</p>
}
