@model InkCanvas.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome to InkCanvas!</title>
    <style>
        .fixed-width-form {
            width: 400px;
            margin: 0 auto;
        }

        .welcome-message {
            text-align: center;
        }
    </style>
</head>

<body>
    <h2 class="welcome-message">Welcome to InkCanvas!</h2>
    <form method="post" asp-controller="Account" asp-action="Register" class="fixed-width-form">
        <fieldset>
            <legend>Register</legend>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 row">
                <label for="Login" class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Login" placeholder="Pick something nice" asp-for="Login">
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="Email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="Email" placeholder="name@example.com" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="Age" class="col-sm-2 col-form-label">Age</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="Age" placeholder="How old are you?" asp-for="Age">
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="Password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="Password" placeholder="One, one, one, uhh... ONE" autocomplete="off" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="PasswordConfirm" class="col-sm-2 col-form-label">Confirm password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="PasswordConfirm" placeholder="One more time" autocomplete="off" asp-for="PasswordConfirm">
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-10 offset-sm-2">
                    <input type="submit" value="Create account" class="btn btn-primary" />
                    <button type="button" onclick="window.location.href='Login'" class="btn btn-secondary">Not the first time here? Log in!</button>
                </div>
            </div>
        </fieldset>
    </form>

</body>
</html>
